/* pages/share/share.wxss */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #0b1220, #0a1a2e);
  padding: 40rpx 24rpx;
  box-sizing: border-box;
}

.center {
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.muted {
  color: rgba(255,255,255,0.55);
  font-size: 26rpx;
}

/* 玻璃面板 */
.panel {
  border-radius: 32rpx;
  padding: 48rpx 36rpx;
  background: rgba(18, 32, 54, 0.62);
  border: 1rpx solid rgba(96,225,255,0.35);
}

.contract-name {
  font-size: 22rpx;
  color: rgba(255,255,255,0.65);
  margin-bottom: 12rpx;
  text-align: center;
  line-height: 1.3;
}

/* 分数 */
.score-wrap {
  display: flex;
  justify-content: center;
  margin-top: 12rpx;
}

.score-ring {
  width: 280rpx;
  height: 280rpx;
  border-radius: 999rpx;
  border: 8rpx solid rgba(110,247,255,0.45);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.score-num {
  font-size: 96rpx;
  font-weight: 900;
  color: #ffffff;
}

.score-label {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: rgba(255,255,255,0.65);
}

/* 结论 */
.score-title {
  margin-top: 100rpx;
  font-size: 40rpx;
  font-weight: 900;
  text-align: center;
  color: #ffffff;
}

/* 摘要 */
.summary {
  margin-top: 28rpx;
  font-size: 26rpx;
  line-height: 1.7;
  color: rgba(255,255,255,0.78);
}

/* CTA */
.cta {
  margin-top: 48rpx;
  padding-top: 28rpx;
  border-top: 1rpx solid rgba(110,247,255,0.25);
  text-align: center;
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
}

.cta-strong {
  display: block;
  margin-top: 12rpx;
  font-size: 30rpx;
  font-weight: 900;
  color: #6ef7ff;
}

.brand{
  margin-top: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 徽章容器 */
.qr-badge{
  position: relative;
  width: 180rpx;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 外圈霓虹环 */
.qr-ring{
  position: absolute;
  inset: 0;
  border-radius: 999rpx;
  border: 6rpx solid rgba(110,247,255,0.75);
  box-shadow:
    0 0 0 10rpx rgba(110,247,255,0.14),
    0 18rpx 50rpx rgba(0,0,0,0.35);
}

/* 内层玻璃底座 */
.qr-inner{
  width: 140rpx;
  height: 140rpx;
  border-radius: 28rpx;
  overflow: hidden; /* ✅裁切二维码方形白底 */
  background: rgba(255,255,255,0.10);
  border: 1rpx solid rgba(255,255,255,0.16);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
}

/* 二维码本体：不再用 widthFix，防止撑破 */
.brand-qrcode{
  width: 124rpx;
  height: 124rpx;
  opacity: 0.96;
}

/* 文案 */
.brand-text{
  margin-top: 18rpx;
  font-size: 22rpx;
  color: rgba(255,255,255,0.55);
  letter-spacing: 1rpx;
}


.share-footer {
  margin-top: 24rpx;
  padding-bottom: 12rpx;
  text-align: center;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.45);
  letter-spacing: 0.5rpx;
}

.score-ring-canvas {
  width: 360rpx;
  height: 360rpx;
  display: block;
  margin: -20rpx auto 0;
}

.score-center {
  width: 360rpx;
  margin: -270rpx auto 0; /* 把数字叠到圈中心 */
  text-align: center;
}

.score-num {
  font-size: 88rpx;
  font-weight: 700;
  line-height: 1;
}

.score-label {
  margin-top: 12rpx;
  font-size: 26rpx;
  opacity: 0.75;
}
