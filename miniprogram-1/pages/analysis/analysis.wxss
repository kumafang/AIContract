/* pages/analysis/analysis.wxss */
.page{
  min-height: 100vh;
  background: #ffffff;
  padding-bottom: 40rpx;
}

/* Nav */
.nav{
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  border-bottom: 1rpx solid #eef2f7;
  position: sticky;
  top: 0;
  background: rgba(255,255,255,0.9);
  backdrop-filter: blur(10px);
  z-index: 10;
}
.nav-left{
  width: 72rpx;
  height: 72rpx;
  display:flex;
  align-items:center;
  justify-content:flex-start;
  font-size: 40rpx;
  color:#0d121b;
}
.nav-title{
  flex:1;
  text-align:center;
  font-weight: 800;
  font-size: 32rpx;
  color:#0d121b;
}
.nav-right{
  width:72rpx;
  height:72rpx;
}

/* Hero: ring + file inside */
.hero{
  width: 360rpx;
  height: 360rpx;
  margin: 60rpx auto 24rpx;
  position: relative;
  display:flex;
  align-items:center;
  justify-content:center;
}
.ring{
  position:absolute;
  border-radius: 9999px;
}
.ring-outer{
  width: 360rpx;
  height: 360rpx;
  background: rgba(59,130,246,0.10);
  animation: pulse 1.8s ease-in-out infinite;
}
.ring-inner{
  width: 300rpx;
  height: 300rpx;
  background: rgba(59,130,246,0.16);
}

@keyframes pulse{
  0%{ transform: scale(1); opacity: 0.85;}
  50%{ transform: scale(1.05); opacity: 1;}
  100%{ transform: scale(1); opacity: 0.85;}
}

/* File cards */
.fileCard{
  width: 180rpx;
  height: 180rpx;
  border-radius: 28rpx;
  display:flex;
  flex-direction: column;
  align-items:center;
  justify-content:center;
  z-index: 2;
  color: #fff;
  font-weight: 900;
  box-shadow: 0 14rpx 40rpx rgba(0,0,0,0.18);
}
.fileIcon{ font-size: 72rpx; line-height: 1; }
.fileText{ margin-top: 8rpx; font-size: 22rpx; letter-spacing: 2rpx; }

.fileCard.pdf{ background: #dc2626; }
.fileCard.docx{ background: #2563eb; }
.fileCard.generic{ background: #3b82f6; }

/* Image inside ring */
.imageCard{
  width: 220rpx;
  height: 220rpx;
  border-radius: 28rpx;
  overflow: hidden;
  z-index: 2;
  box-shadow: 0 18rpx 44rpx rgba(0,0,0,0.18);
  border: 8rpx solid #fff;
  position: relative;
}
.image{
  width: 100%;
  height: 100%;
}
.badge{
  position: absolute;
  right: 12rpx;
  top: 12rpx;
  background: rgba(0,0,0,0.55);
  color: #fff;
  font-size: 20rpx;
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
}

/* Scanning line */
.scan{
  position:absolute;
  z-index: 3;
  width: 280rpx;
  height: 10rpx;
  left: 50%;
  top: 50%;
  transform: translateX(-50%);
  border-radius: 999rpx;
  animation: scanMove 2s ease-in-out infinite;
  box-shadow: 0 0 28rpx rgba(59,130,246,0.9);
}
.scan-pdf{ background: rgba(248,113,113,0.95); box-shadow: 0 0 28rpx rgba(248,113,113,0.95); }
.scan-docx{ background: rgba(147,197,253,0.95); box-shadow: 0 0 28rpx rgba(147,197,253,0.95); }
.scan-img{ background: rgba(59,130,246,0.7); }

@keyframes scanMove{
  0%,100%{ transform: translate(-50%, -120rpx); }
  50%{ transform: translate(-50%, 120rpx); }
}

/* Copy */
.copy{
  padding: 0 48rpx;
  text-align: center;
}
.headline{
  font-size: 40rpx;
  font-weight: 900;
  color:#0d121b;
  line-height: 1.2;
}
.sub{
  margin-top: 14rpx;
  font-size: 26rpx;
  color:#4c669a;
}

/* Progress card */
.progressCard{
  margin: 26rpx 36rpx 0;
  padding: 28rpx;
  border-radius: 22rpx;
  background: #f6f8fc;
  border: 1rpx solid #eef2f7;
}
.progressRow{
  display:flex;
  align-items:center;
  justify-content: space-between;
}
.progressTitle{
  font-size: 28rpx;
  font-weight: 700;
  color:#0d121b;
}
.progressPct{
  font-size: 26rpx;
  font-weight: 900;
  color:#3b82f6;
}
.progressBar{
  margin-top: 18rpx;
  height: 18rpx;
  background: #e5e7eb;
  border-radius: 999rpx;
  overflow: hidden;
}
.progressFill{
  height: 100%;
  background: #3b82f6;
  border-radius: 999rpx;
  transition: width .25s ease;
}
.progressHint{
  margin-top: 14rpx;
  font-size: 22rpx;
  color:#4c669a;
  font-style: italic;
}

/* Steps */
.steps{
  margin: 26rpx 36rpx 0;
  background: #fff;
  border-radius: 22rpx;
  padding: 10rpx 12rpx;
  border: 1rpx solid #eef2f7;
}
.step{
  display:flex;
  align-items:center;
  gap: 18rpx;
  padding: 18rpx 16rpx;
  border-radius: 18rpx;
}
.dot{
  width: 44rpx;
  height: 44rpx;
  border-radius: 999rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  font-weight: 900;
  font-size: 22rpx;
  background: #e5e7eb;
  color:#6b7280;
}
.label{
  font-size: 26rpx;
  color:#0d121b;
  font-weight: 700;
}
.step.active{
  background: rgba(59,130,246,0.08);
}
.step.active .dot{
  background: #3b82f6;
  color:#fff;
}
.step.done .dot{
  background: rgba(34,197,94,1);
  color:#fff;
}
.step.done .label{
  color:#0d121b;
}

/* Tips + Cancel */
.tips{
  margin: 24rpx 36rpx 0;
}
.cancelBtn{
  margin: 20rpx 36rpx 0;
  text-align:center;
  color:#6b7280;
  font-size: 26rpx;
  padding: 24rpx 0;
}

/* Overlay modal */
.overlay{
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.45);
  display:flex;
  align-items:center;
  justify-content:center;
  z-index: 999;
}
.modal{
  width: 640rpx;
  background: #fff;
  border-radius: 22rpx;
  padding: 28rpx;
}
.m-title{ font-size: 30rpx; font-weight: 900; color:#0d121b; }
.m-sub{ margin-top: 10rpx; font-size: 24rpx; color:#64748b; }
.m-btns{ margin-top: 22rpx; display:flex; gap: 16rpx; }
.btn{
  flex:1;
  text-align:center;
  padding: 22rpx 0;
  border-radius: 16rpx;
  font-weight: 900;
}
.btn.ghost{ background: #f1f5f9; color:#0f172a; }
.btn.danger{ background: #ef4444; color:#fff; }
