/* pages/home/home.wxss */
page {
  --bg: #f7f8fc;
  --card: rgba(255, 255, 255, 0.92);
  --text: #0d121b;
  --sub: rgba(13, 18, 27, 0.55);
  --muted: rgba(13, 18, 27, 0.35);
  --border: rgba(13, 18, 27, 0.06);

  --primary: #386fff;
  --primary-weak: rgba(56, 111, 255, 0.10);

  --radius-xl: 28rpx;
  --radius-lg: 22rpx;
  --radius-md: 18rpx;

  --shadow-sm: 0 8rpx 20rpx rgba(13, 18, 27, 0.06);
  --shadow-md: 0 14rpx 38rpx rgba(13, 18, 27, 0.10);
  --shadow-primary: 0 18rpx 46rpx rgba(56, 111, 255, 0.18);
}

.page {
  height: 100vh;
  background: var(--bg);
  color: var(--text);
}

.content {
  height: calc(100vh - 104rpx);
}

.px { padding-left: 24rpx; padding-right: 24rpx; margin-bottom: 22rpx;}
.mt { margin-top: 22rpx; }
.mt-lg { margin-top: 34rpx; }
.mb-lg { margin-bottom: 24rpx; }

.section-title {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 26rpx;
  font-weight: 950;
  margin-bottom: 14rpx;
  letter-spacing: 0.5rpx;
}
.section-title.plain { margin-bottom: 12rpx; }

.section-icon { font-size: 30rpx; opacity: 0.9; margin-left: 10rpx; }

/* ====== Top Nav ====== */
.nav {
  position: sticky;
  top: 0;
  z-index: 50;
  height: 104rpx;
  padding: 18rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(247, 248, 252, 0.75);
  backdrop-filter: blur(18rpx);
  border-bottom: 1rpx solid var(--border);
}

.nav-left, .nav-right {
  width: 160rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.nav-right { justify-content: flex-end; }

.logo {
  height: 72rpx;
  padding: 0 18rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, rgba(56,111,255,0.18), rgba(56,111,255,0.06));
  border: 1rpx solid rgba(56,111,255,0.18);
  box-shadow: 0 10rpx 26rpx rgba(56,111,255,0.10);
  display: flex;
  align-items: center;
  justify-content: center;
}

.brand {
  font-weight: 950;
  color: var(--primary);
  font-size: 24rpx;
  letter-spacing: 1rpx;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 950;
  letter-spacing: 1rpx;
}

/* ====== Banner ====== */
.banner {
  position: relative;
  overflow: hidden;
  border-radius: var(--radius-xl);
  padding: 18rpx 36rpx 18rpx;
  background: linear-gradient(135deg, #386fff 0%, #2e57ff 35%, #6a7dff 100%);
  box-shadow: var(--shadow-primary);
  margin-top: 15rpx;
}

.banner-text { position: relative; z-index: 2; }
.banner-title {
  font-size: 36rpx;
  font-weight: 900;
  letter-spacing: 1rpx;
  color: rgba(255,255,255,0.98);
}
.banner-sub {
  margin-top: 1rpx;
  font-size: 24rpx;
  color: rgba(255,255,255,0.86);
  font-weight: 450;
}

.banner-glow {
  position: absolute;
  right: -160rpx;
  top: -160rpx;
  width: 440rpx;
  height: 440rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.18);
  filter: blur(54rpx);
  z-index: 1;
}

.banner-badge {
  position: absolute;
  right: 18rpx;
  bottom: 10rpx;
  opacity: 0.20;
  font-size: 128rpx;
  z-index: 1;
}

/* ====== Banner Brand ====== */
.banner-brand{
  display: flex;
  align-items: center;
  gap: 14rpx;
  margin-bottom: 16rpx;
}

.banner-logo{
  width: 56rpx;
  height: 56rpx;
  border-radius: 14rpx;
  background: rgba(255,255,255,0.14);
  border: 1px solid rgba(255,255,255,0.20);
  padding: 8rpx;
  flex-shrink: 0;
}

.banner-brand-text{
  display: flex;
  flex-direction: column;
  gap: 2rpx;
  min-width: 0;
}

.banner-brand-name{
  font-size: 26rpx;
  font-weight: 900;
  color: rgba(255,255,255,0.95);
  letter-spacing: 0.5rpx;
}

.banner-brand-tag{
  font-size: 20rpx;
  color: rgba(255,255,255,0.78);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 360rpx;
}

/* ====== Mascot Watermark ====== */
.banner-mascot{
  position: absolute;
  right: -22rpx;
  bottom: -26rpx;
  width: 260rpx;
  height: 260rpx;
  opacity: 0.16;          /* 关键：专业感来自“克制透明度” */
  transform: rotate(6deg);
  z-index: 1;
  pointer-events: none;
  filter: saturate(0.9);
}

/* 让文字始终在最上层 */
.banner-text{ position: relative; z-index: 3; }

/* 可选：把盾牌再弱一点，避免抢戏（保留专业感） */
.banner-badge{
  opacity: 0.12;
  font-size: 116rpx;
  right: 22rpx;
  bottom: 16rpx;
}

/* ====== Segmented: ensure centered text ====== */
.seg {
  padding: 8rpx;
  background: rgba(13, 18, 27, 0.06);
  border-radius: var(--radius-lg);
  display: flex;
  gap: 8rpx;
}

.seg-btn {
  flex: 1;
  height: 84rpx;
  border-radius: 18rpx;
  font-size: 28rpx;
  font-weight: 950;
  background: transparent;
  color: rgba(13, 18, 27, 0.55);

  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}
.seg-btn::after { border: none; }

.seg-active {
  background: rgba(255,255,255,0.92);
  color: var(--primary);
  border: 1rpx solid rgba(56,111,255,0.16);
  box-shadow: var(--shadow-sm);
}

/* ====== Contract Type Grid ====== */
.type-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 16rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.type-icon {
  width: 110rpx;
  height: 110rpx;
  border-radius: 24rpx;
  background: rgba(255,255,255,0.9);
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-sm);
  display: flex;
  align-items: center;
  justify-content: center;
}

.type-icon-active {
  background: rgba(56,111,255,0.92);
  border: 1rpx solid rgba(255,255,255,0.25);
  box-shadow: 0 14rpx 34rpx rgba(56,111,255,0.22);
}

.type-emoji { font-size: 44rpx; }
.type-label {
  font-size: 20rpx;
  font-weight: 950;
  color: var(--muted);
}
.type-label-active { color: var(--primary); }

/* ====== Upload cards: more "full" ====== */
.action-card {
  border-radius: var(--radius-xl);
  background: rgba(255,255,255,0.95);
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-md);

  /* ✅ 核心：三张卡片高度统一 */
  height: 140rpx;

  padding: 20rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;   /* 垂直居中 */

  transition: transform .15s ease, box-shadow .15s ease;
}

.action-card::after { border: none; }

.action-card:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-sm);
}

.action-row {
  min-width: 360rpx;
  display: flex;
  align-items: left;
  justify-content: left;
  gap: 40rpx;
}

.action-content {
  display: flex;
  flex-direction: column;
  gap: 0rpx;
  align-items: left;
  justify-content: left;
}

.action-circle {
  width: 88rpx;
  height: 88rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  border: 1rpx solid rgba(13,18,27,0.06);
  margin-left: 0rpx;
}

.action-text {
  font-size: 24rpx;
  font-weight: 950;
  text-align: left;
}

.action-sub {
  font-size: 18rpx;
  color: var(--sub);
  font-weight: 650;
  text-align: left;
  line-height: 1.4;
}

.action-card.selected {
  border: 2rpx solid var(--primary);
  background: rgba(56, 111, 255, 0.06);
  box-shadow: 0 16rpx 36rpx rgba(56, 111, 255, 0.22);
}

.action-card.selected .action-circle {
  background: rgba(56, 111, 255, 0.18);
  border-color: rgba(56, 111, 255, 0.35);
}

/* 上传后文件名展示 */
.upload-preview {
  margin-top: 18rpx;
  border-radius: var(--radius-xl);
  background: rgba(56, 111, 255, 0.08);
  border: 1rpx solid rgba(56,111,255,0.16);
  padding: 16rpx 18rpx;
}

.upload-preview-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 200rpx;
}

.upload-chip {
  display: flex;
  align-items: center;
  gap: 10rpx;
  min-width: 0;
}

.upload-chip-icon { font-size: 22rpx; }
.upload-chip-text {
  font-size: 22rpx;
  font-weight: 900;
  color: rgba(13,18,27,0.86);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.upload-clear {
  padding: 0 20rpx;
  height: 56rpx;
  border-radius: 16rpx;
  background: rgba(255,255,255,0.72);
  border: 1rpx solid rgba(13,18,27,0.06);
  font-size: 22rpx;
  font-weight: 800;
  color: rgba(13,18,27,0.65);
  margin-right: 10rpx;
}
.upload-clear::after { border: none; }

.upload-hint {
  margin-top: 8rpx;
  font-size: 18rpx;
  color: var(--sub);
  font-weight: 650;
}

/* 开始分析按钮：撑满 */
.start-wrap { margin-top: 16rpx; }

.start-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 26rpx;
  background: var(--primary);
  color: #fff;
  font-size: 28rpx;
  font-weight: 950;
  letter-spacing: 1rpx;
  box-shadow: 0 16rpx 34rpx rgba(56,111,255,0.22);

  display: flex;
  align-items: center;
  justify-content: center;
}
.start-btn[disabled] { opacity: 0.45; }
.start-btn::after { border: none; }

/* ====== Tips: compact + icon/颜色 ====== */
.tipsBox {
  border-radius: var(--radius-xl);
  padding: 18rpx 18rpx 14rpx;
  background: rgba(56, 111, 255, 0.08);
  border: 1rpx solid rgba(56,111,255,0.16);
  box-shadow: var(--shadow-sm);
}

.tipsHead {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 10rpx;
}

.tipsBadge {
  width: 64rpx;
  height: 64rpx;
  border-radius: 18rpx;
  background: rgba(56,111,255,0.16);
  display: flex;
  align-items: center;
  justify-content: center;
}
.tipsBadgeIcon { font-size: 30rpx; }

.tipsHeadTitle {
  font-size: 26rpx;
  font-weight: 950;
  letter-spacing: 0.5rpx;
}
.tipsHeadSub {
  margin-top: 2rpx;
  font-size: 18rpx;
  color: var(--sub);
  font-weight: 650;
}

.tipsSwiper {
  height: 92rpx; /* 关键：大幅压缩高度 */
}

.tipsItem {
  height: 92rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.tipsItemTitle { font-size: 22rpx; font-weight: 950; }
.tipsItemSub { margin-top: 6rpx; font-size: 18rpx; color: var(--sub); font-weight: 650; }

/* ====== Modal ====== */
.overlay {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  z-index: 120;
  background: rgba(0,0,0,0.42);
  backdrop-filter: blur(14rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
}

.modal {
  width: 100%;
  max-width: 680rpx;
  border-radius: 30rpx;
  background: rgba(255,255,255,0.96);
  overflow: hidden;
  box-shadow: 0 30rpx 70rpx rgba(0,0,0,0.26);
}

.modal-head {
  padding: 22rpx 24rpx;
  border-bottom: 1rpx solid var(--border);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title { font-size: 28rpx; font-weight: 950; }

.icon-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  background: rgba(255,255,255,0.55);
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 400rpx;
}
.icon-btn::after { border: none; }

.modal-body { padding: 24rpx; }
.modal-foot { padding: 0 24rpx 24rpx; }
.modal-foot.row { display: flex; gap: 16rpx; }

.textarea {
  width: 100%;
  height: 360rpx;
  border-radius: 24rpx;
  background: rgba(13, 18, 27, 0.05);
  padding: 18rpx;
  font-size: 24rpx;
  box-sizing: border-box;
}

.kv {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 14rpx;
  margin-top: 14rpx;
  margin-left: 14rpx;
}
.k { color: var(--sub); font-weight: 650; }
.v { font-weight: 950; }

.preview {
  margin-top: 14rpx;
  border-radius: 24rpx;
  background: rgba(13, 18, 27, 0.05);
  padding: 18rpx;
}
.preview-k { font-size: 20rpx; color: var(--sub); margin-bottom: 10rpx; font-weight: 800; }
.preview-v .muted { font-size: 18rpx; color: var(--sub); margin-top: 8rpx; font-weight: 650; }
.bold { font-weight: 950; }
.small { font-size: 22rpx; }
.break { word-break: break-all; }

.note {
  margin-top: 16rpx;
  font-size: 20rpx;
  color: var(--sub);
  line-height: 1.7;
  font-weight: 650;
}

.primary, .secondary {
  height: 90rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 950;
  display: flex;
  align-items: center;
  justify-content: center;
}

.primary {
  background: var(--primary);
  color: #fff;
  box-shadow: 0 14rpx 30rpx rgba(56,111,255,0.22);
}
.primary[disabled] { opacity: 0.5; }

.secondary {
  background: rgba(13, 18, 27, 0.06);
  color: rgba(13, 18, 27, 0.88);
}

.primary::after, .secondary::after { border: none; }

/* 圆形裁切容器 */
.logoImgWrap{
  width: 99rpx;
  height: 99rpx;
  border-radius: 999rpx;

  overflow: hidden;        /* ✅ 关键：裁掉圆外内容 */
  background: transparent; /* 背景透明 */

  display: flex;
  align-items: center;
  justify-content: center;

  border: 1rpx solid rgba(13,18,27,0.06);
  box-shadow: var(--shadow-sm);
}

/* 图片本身填满容器 */
.logoImg{
  width: 100%;
  height: 100%;
}

.credit-card{
  padding: 18rpx 18rpx;
  border-radius: 16rpx;
  background: #f7f8fa;
  border: 1px solid #eee;

  display: flex;
  flex-direction: row;
  align-items: center;          /* ✅ 三段垂直居中 */
  justify-content: space-between;
  gap: 16rpx;

  min-height: 120rpx;           /* ✅ 防止看起来“塌”或不稳定 */
  box-sizing: border-box;
}

.hammer-img{
  width: 80rpx;                 /* ✅ 锤子更大（你嫌小就再加） */
  height: 80rpx;
  flex: 0 0 80rpx;
}

.credit-mid{
  flex: 1;
  min-width: 0;                 /* ✅ 防止标题长导致挤爆 */
  display: flex;
  flex-direction: column;
  justify-content: center;      /* ✅ 文案列内部垂直居中 */
}

.credit-title{
  font-size: 28rpx;
  font-weight: 700;
  color: #0d121b;
  line-height: 1.2;
}

.credit-sub{
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #6b7280;
  line-height: 1.2;
}

.credit-num{
  font-size: 60rpx;             /* ✅ 数字更大 */
  font-weight: 900;
  color: #0d121b;
  line-height: 1;               /* ✅ 视觉居中关键 */
  flex: 0 0 70rpx;

  /* ✅ 强制自己也在中线，不受其他样式影响 */
  align-self: center;
}

/* Disclaimer */
.disclaimer {
  margin-top: 18rpx;
  padding: 18rpx;
  border-color: #e6eaf2;
}

.dis-row {
  display: flex;
  gap: 12rpx;
  align-items: flex-start;
}

.dis-icon {
  width: 34rpx;
  height: 34rpx;
  border-radius: 999rpx;
  background: rgba(76, 102, 154, 0.12);
  color: #4c669a;
  font-size: 22rpx;
  font-weight: 900;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 2rpx;
}

.dis-text {
  flex: 1;
  font-size: 22rpx;
  color: #4c669a;
  line-height: 1.6;
  white-space: pre-wrap;
}

.bottom-space {
  height: 60rpx;
}