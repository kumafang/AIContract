/* pages/about/about.wxss */
.page {
  min-height: 100vh;
  background: #f7f8fc;
}

.container {
  padding: 0 32rpx;
}

/* Nav */
.nav {
  position: sticky;
  top: 0;
  z-index: 50;
  background: rgba(247, 248, 252, 0.85);
  backdrop-filter: blur(12px);
  border-bottom: 1rpx solid #e6eaf2;
}

.nav-inner {
  height: 96rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.nav-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav-btn:active {
  background: rgba(13, 18, 27, 0.06);
}

.icon {
  font-size: 32rpx;
  color: #0d121b;
  line-height: 1;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 900;
  color: #0d121b;
}

.nav-right {
  width: 80rpx;
  height: 80rpx;
}

/* Cards */
.card {
  background: #fff;
  border-radius: 24rpx;
  border: 1rpx solid #cfd7e7;
  overflow: hidden;
}

.hero {
  margin-top: 20rpx;
  padding: 24rpx;
}

.hero-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.hero-name {
  font-size: 30rpx;
  font-weight: 900;
  color: #0d121b;
}

.hero-ver {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #4c669a;
  font-weight: 700;
}

.hero-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  background: rgba(45, 212, 191, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
}

.gavel {
  font-size: 40rpx;
}

.hero-text {
  margin-top: 18rpx;
}

.p {
  font-size: 24rpx;
  color: #4c669a;
  line-height: 1.7;
  margin-top: 8rpx;
}

/* Section */
.section-kicker {
  margin-top: 30rpx;
  padding: 0 4rpx 12rpx;
  font-size: 22rpx;
  font-weight: 900;
  color: #98a2b3;
  letter-spacing: 2rpx;
}

/* Logs */
.log-list {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.log {
  padding: 22rpx;
}

.log-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.log-ver {
  font-size: 26rpx;
  font-weight: 900;
  color: #0d121b;
}

.log-date {
  font-size: 22rpx;
  color: #4c669a;
}

.log-items {
  margin-top: 14rpx;
}

.li {
  font-size: 24rpx;
  color: #4c669a;
  line-height: 1.7;
  margin-top: 6rpx;
}

/* Disclaimer */
.disclaimer {
  margin-top: 18rpx;
  padding: 18rpx;
  border-color: #e6eaf2;
}

.dis-row {
  display: flex;
  gap: 12rpx;
  align-items: flex-start;
}

.dis-icon {
  width: 34rpx;
  height: 34rpx;
  border-radius: 999rpx;
  background: rgba(76, 102, 154, 0.12);
  color: #4c669a;
  font-size: 22rpx;
  font-weight: 900;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 2rpx;
}

.dis-text {
  flex: 1;
  font-size: 22rpx;
  color: #4c669a;
  line-height: 1.6;
  white-space: pre-wrap;
}

.bottom-space {
  height: 60rpx;
}
/* 圆形裁切容器 */
.logoImgWrap{
  width: 99rpx;
  height: 99rpx;
  border-radius: 999rpx;

  overflow: hidden;        /* ✅ 关键：裁掉圆外内容 */
  background: transparent; /* 背景透明 */

  display: flex;
  align-items: center;
  justify-content: center;

  border: 1rpx solid rgba(13,18,27,0.06);
  box-shadow: var(--shadow-sm);
}

/* 图片本身填满容器 */
.logoImg{
  width: 100%;
  height: 100%;
}