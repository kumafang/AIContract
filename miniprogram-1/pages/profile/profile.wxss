/* pages/profile/profile.wxss */
.container {
  padding: 24rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  margin: 8rpx 0 24rpx;
  color: #0d121b;
}

.card {
  background: #fff;
  border: 1px solid #eee;
  border-radius: 16rpx;
  padding: 28rpx;
}

.top {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

/* ✅ 头像无红框 */
.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  overflow: hidden;
  background: #f1f5f9;
  flex-shrink: 0;
}

/* 默认未登录头像占位 */
.placeholder {
  background: #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 用纯 CSS 画一个小人 icon（不依赖图片资源） */
.avatar-icon {
  width: 44rpx;
  height: 44rpx;
  border-radius: 22rpx;
  background: rgba(13, 18, 27, 0.16);
  position: relative;
}
.avatar-icon::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 54rpx;
  transform: translate(-50%, -50%);
  width: 66rpx;
  height: 42rpx;
  border-radius: 30rpx 30rpx 18rpx 18rpx;
  background: rgba(13, 18, 27, 0.10);
}

.info {
  flex: 1;
  min-width: 0;
}

.name {
  font-size: 32rpx;
  font-weight: 700;
  color: #0d121b;
  max-width: 360rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.status {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.right {
  flex-shrink: 0;
  display: flex;
  align-items: center;
}

.hint {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.menu {
  margin-top: 24rpx;
  background: #fff;
  border: 1px solid #eee;
  border-radius: 16rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 26rpx 24rpx;
  border-top: 1px solid #f3f4f6;
  font-size: 28rpx;
  color: #0d121b;
}

.menu-item:first-child {
  border-top: none;
}

.chev {
  color: #9ca3af;
  font-size: 36rpx;
  line-height: 1;
}

/* ===== Modal ===== */
.modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding: 24rpx;
  z-index: 999;
}

.modal {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0d121b;
  margin-bottom: 18rpx;
}

.modal-row {
  margin-top: 16rpx;
}

.modal-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 10rpx;
}

.modal-avatar {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.modal-avatar-img {
  width: 84rpx;
  height: 84rpx;
  border-radius: 42rpx;
}

.modal-input {
  background: #f7f8fa;
  border: 1px solid #eee;
  border-radius: 12rpx;
  padding: 18rpx 16rpx;
  font-size: 28rpx;
}

.modal-actions {
  margin-top: 22rpx;
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.modal-btn.ghost {
  background: #f3f4f6;
}

.modal-tip {
  margin-top: 14rpx;
  font-size: 24rpx;
  color: #6b7280;
}

/* ===== Credits Card ===== */
.credit-card{
  margin-top: 22rpx;
  padding: 18rpx 18rpx;
  border-radius: 16rpx;
  background: #f7f8fa;
  border: 1px solid #eee;

  display: flex;
  align-items: center;
  justify-content: space-between;
}

.credit-card--disabled{
  opacity: 0.75;
}

.credit-left{
  display: flex;
  align-items: center;
  gap: 30rpx;
  min-width: 0;
}

.hammer-img{
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
  margin-right: 10rpx;
}

.credit-text{
  min-width: 0;
}

.credit-title{
  font-size: 28rpx;
  font-weight: 700;
  color: #0d121b;
  line-height: 1.2;
  margin-right: 15rpx;
}

.credit-sub{
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #6b7280;
  line-height: 1.2;
}

.credit-right{
  display: flex;
  align-items: center;
  justify-content: center;
  padding-right: 30rpx;
}

.credit-num{
  font-size: 56rpx;
  font-weight: 900;
  color: #0d121b;
  line-height: 1;
}

/* ===== Recharge ===== */
.recharge-wrap{
  margin-top: 16rpx;
}

.recharge-btn{
  width: 100%;
  border-radius: 16rpx;
}

.recharge-hint{
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #6b7280;
  text-align: center;
}

/* ===== SKU List ===== */
.sku-list{
  margin-top: 12rpx;
}

.sku-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 16rpx;
  border: 1px solid #eee;
  border-radius: 14rpx;
  margin-top: 12rpx;
  background: #f7f8fa;
}

.sku-item--active{
  border-color: #111827;
  background: #fff;
}

.sku-title{
  font-size: 28rpx;
  font-weight: 700;
  color: #0d121b;
}

.sku-sub{
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.sku-check{
  font-size: 24rpx;
  color: #0d121b;
}

/* ===== Orders Card ===== */
.orders-card{
  margin-top: 18rpx;
  background: #fff;
  border: 1px solid #eee;
  border-radius: 16rpx;
  padding: 20rpx 20rpx;
}

.orders-head{
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.orders-title{
  font-size: 28rpx;
  font-weight: 800;
  color: #0d121b;
}

.orders-sub{
  font-size: 22rpx;
  color: #6b7280;
}

.orders-empty{
  font-size: 24rpx;
  color: #6b7280;
  padding: 16rpx 0 6rpx;
}

.order-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 0;
  border-top: 1px solid #f3f4f6;
}

.order-item:first-of-type{
  border-top: none;
}

.order-top{
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.order-credits{
  font-size: 28rpx;
  font-weight: 800;
  color: #0d121b;
}

.order-fee{
  font-size: 24rpx;
  color: #111827;
}

.order-bottom{
  margin-top: 8rpx;
  display: flex;
  gap: 14rpx;
  flex-wrap: wrap;
}

.order-time, .order-no{
  font-size: 22rpx;
  color: #6b7280;
}

.status-pill{
  padding: 10rpx 14rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 700;
  border: 1px solid #eee;
  background: #f7f8fa;
  color: #111827;
}

.status-PAID{
  border-color: #d1fae5;
  background: #ecfdf5;
}

.status-CREATED{
  border-color: #e5e7eb;
  background: #f9fafb;
}

.status-CLOSED{
  border-color: #fee2e2;
  background: #fef2f2;
}

/* ===== Orders Collapse ===== */
.orders-card{
  margin-top: 12rpx;
  background: #fff;
  border: 1px solid #eee;
  border-radius: 16rpx;
  overflow: hidden;
}

.orders-head{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 5rpx;
}

.orders-head-left{
  min-width: 0;
}

.orders-title{
  font-size: 28rpx;
  font-weight: 700;
  color: #0d121b;
}

.orders-sub{
  margin-top: 2rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.orders-chev{
  color: #9ca3af;
  font-size: 26rpx;
  flex-shrink: 0;
}

/* ===== Orders (Timeline) ===== */
.orders-card{
  margin-top: 16rpx;
  background: #fff;
  border: 1px solid #eee;
  border-radius: 16rpx;
  overflow: hidden;
}

.orders-head{
  padding: 14rpx 20rpx;
  border-bottom: 1px solid #f3f4f6;
  position: relative;
}

.orders-title{
  font-size: 28rpx;
  font-weight: 700;
  color: #0d121b;
  line-height: 1.2;
}

.orders-sub{
  margin-top: 2rpx;
  font-size: 22rpx;
  color: #6b7280;
  line-height: 1.2;
}

.orders-action{
  position: absolute;
  right: 20rpx;
  top: 14rpx;
  font-size: 24rpx;
  color: #3b82f6;
}

.orders-empty{
  padding: 22rpx 20rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.timeline{
  padding: 12rpx 20rpx 6rpx;
}

.t-item{
  display: flex;
  gap: 16rpx;
  padding: 10rpx 0;
}

.t-left{
  width: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
}

.t-dot{
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background: rgba(13, 18, 27, 0.22);
  margin-top: 8rpx;
}

.t-dot--paid{
  background: rgba(34, 197, 94, 0.9);
}

.t-line{
  width: 2rpx;
  flex: 1;
  background: #e5e7eb;
  margin-top: 10rpx;
}

.t-right{
  flex: 1;
  background: #f7f8fa;
  border: 1px solid #eee;
  border-radius: 14rpx;
  padding: 14rpx 14rpx;
}

.t-top{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.t-credits{
  font-size: 28rpx;
  font-weight: 800;
  color: #0d121b;
}

.recharge-history{
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  margin-left: -300rpx;
}

.t-fee{
  font-size: 26rpx;
  color: #0d121b;
  font-weight: 700;
}

.t-bottom{
  margin-top: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.t-time{
  font-size: 22rpx;
  color: #6b7280;
}

.t-status{
  font-size: 22rpx;
  color: #6b7280;
}

.t-no{
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #9ca3af;
  word-break: break-all;
}

.orders-foot{
  padding: 10rpx 20rpx 16rpx;
  font-size: 22rpx;
  color: #9ca3af;
}

/* ===== SKU New Layout ===== */
.sku-row1{
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.sku-amount{
  font-size: 30rpx;
  font-weight: 900;
  color: #0d121b;
}

.sku-coin{
  width: 30rpx;
  height: 30rpx;
  flex-shrink: 0;
}

.sku-unit{
  font-size: 24rpx;
  color: #111827;
  font-weight: 700;
}

.sku-tag{
  margin-left: 10rpx;
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
  font-size: 20rpx;
  font-weight: 800;
  color: #b45309;
  background: #fff7ed;
  border: 1px solid #fed7aa;
}

.sku-row2{
  margin-top: 8rpx;
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.sku-price-origin{
  font-size: 22rpx;
  color: #9ca3af;
  text-decoration: line-through;
}

.sku-price-now{
  font-size: 26rpx;
  font-weight: 800;
  color: #0d121b;
}

.sku-desc{
  margin-top: 0rpx;
  font-size: 20rpx;
  color: #6b7280;
  margin-right: 10rpx;
}
