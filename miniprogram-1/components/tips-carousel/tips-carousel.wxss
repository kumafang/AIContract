/* components/tips-carousel/tips-carousel.wxss */
.tips {
  display: flex;
  gap: 12rpx;
  align-items: flex-start;

  padding: 14rpx 16rpx;
  border-radius: 20rpx;

  background: rgba(56, 111, 255, 0.08);
  border: 1rpx solid rgba(56, 111, 255, 0.16);
}

.icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 14rpx;

  background: rgba(56, 111, 255, 0.18);
  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 26rpx;
  flex-shrink: 0;
}

.content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.title {
  font-size: 22rpx;
  font-weight: 900;
  color: #386fff;
}

.text {
  font-size: 22rpx;
  color: rgba(13, 18, 27, 0.65);
  line-height: 1.5;
}
